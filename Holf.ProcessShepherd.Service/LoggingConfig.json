{
  "Logging": {
    "File": {
      "BasePath": "Logs",
      "FileAccessMode": "KeepOpenAndAutoFlush",
      "FileEncodingName": "utf-8",
      "DateFormat": "yyyyMMdd",
      "CounterFormat": "000",
      "MaxFileSize": 10485760,
      "LogLevel": {
        "Default": "Debug"
      },
      "IncludeScopes": true,
      "MaxQueueSize": 100,
      "Files": [
        {
          "Path": "<date:yyyy>_<date:MM>_<date:dd>/processShepherd-<date:yyyy>_<date:MM>_<date:dd>-<counter>.log",
          "CounterFormat": "000"
        }
      ]
    }
  }
}